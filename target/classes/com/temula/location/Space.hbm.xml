<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.jboss.org/dtd/hibernate/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.temula.location">
    <class name="Space" table="space">
        <id name="spaceId" column="spc_id">
            <generator class="native"/>
        </id>
        <property  name="name" column="spc_name" not-null="true"/>
        <property name="proximityToTemple" column="spc_proximity_to_temple" />
        <property name="numAvailableRooms" column="spc_num_available_rooms"/>
        <property name="hasMosquitoCoils" column="spc_has_mosquito_coils"/>

        <property name="hasBedBugs" column="spc_has_bed_bugs"/>
        <property name="hasRunningWater" column="spc_has_running_water"/>
        <property name="hasCleanSheets" column="spc_has_clean_sheets"/>
        <property name="hasWesternToilet" column="spc_has_western_toilet"/>

        <property name="hasIndianToilet" column="spc_has_indian_toilet"/>
        <property name="hasGeyser" column="spc_has_geyser"/>
        <property name="hasSoap" column="spc_has_soap"/>
        <property name="hasBroom" column="spc_has_broom"/>

        <property name="hasDoormat" column="spc_has_doormat"/>
        <property name="hasLocksOnDoor" column="spc_has_locks_on_door"/>
        <property name="hasLatch" column="spc_has_latch"/>
        <property name="hasWatchman" column="spc_has_watchman"/>

        <property name="hasShopsNearby" column="spc_has_shops_nearby"/>
        <property name="hasVegBreakfast" column="spc_has_veg_breakfast"/>
        <property name="hasNonVegBreakfast" column="spc_has_non_veg_breakfast"/>
        <property name="hasNearbyVeg" column="spc_has_nearby_veg"/>
        <property name="hasNearbyNonVeg" column="spc_has_nearby_nonveg"/>

        <property name="hasTV" column="spc_hasTV"/>
        <property name="isFamilyFriendly" column="spc_is_family_friendly"/>
        <property name="isBachelorFriendly" column="spc_is_bachelor_friendly"/>
    </class>
</hibernate-mapping>
